{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "max-len": ["warn", { "code": 120 }],
        "indent": ["error", 4],
        "new-cap": 1,
        "require-jsdoc" : 0,
        "react/display-name": "off"
    }
}
